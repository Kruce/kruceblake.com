@using System.Web
@model ErrorViewModel
@{
    Layout = "_LayoutError";
    ViewData["Title"] = Model.Title;
}

<div id="error-div">
    <div class="error">
        <div class="error-title">
            <h1>@Model.Title</h1>
        </div>
        <h2>@Model.Message</h2>
        @if (Model.ShowReferenceId)
        {
            var body = HttpUtility.UrlEncode($"Error Reference Id: {Model.ReferenceId}");
            <p>
                <strong>Report this error to <a href="@($"mailto:admin@kruceblake.com?subject=Site%20Error%20on%20kruceblake.com&body={body}")">admin@kruceblake.com</a> with Reference Id:</strong>
                <br />
                <code>@Model.ReferenceId</code>
            </p>
        }
        <a class="error-anchor-button" asp-action="Index" asp-controller="Home">← kruceblake.com</a>
    </div>
</div>