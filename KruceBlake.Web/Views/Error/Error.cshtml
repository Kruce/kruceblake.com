@model ErrorViewModel
@{
    Layout = "_LayoutError";
    ViewData["Title"] = Model.Title;
}

<div id="error-div">
    <div class="error">
        <div class="error-title">
            <h1>@Model.Title</h1>
        </div>
        <h2>@Model.Message</h2>
        @if (Model.ShowReferenceId)
        {
            <p>
                <strong>Report this error to the admin with reference Id:</strong>
                <br />
                <code>@Model.ReferenceId</code>
            </p>
        }
        <h3></h3>
        <a asp-action="Index" asp-controller="Home">← kruceblake.com</a>
    </div>
</div>