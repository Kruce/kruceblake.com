<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Kruce Blake - programmer, application developer, software engineer.">

    <title>@ViewData["Title"] - kruce blake</title>
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/fontawesome-free/css/all.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" integrity="sha384-0c38nfCMzF8w8DBI+9nTWzApOpr1z0WuyswL4y6x/2ZTtmj/Ki5TedKeUcFusC/k" crossorigin="anonymous" asp-fallback-href="~/lib/fontawesome-free/css/all.min.css">
        <link rel="stylesheet" href="~/css/site.min.css"/>
    </environment>
</head>
<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#about">about</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#projects">projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#contact-info">contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header -->
    <header class="masthead">
        <div class="container d-flex h-100 align-items-center">
            <div id="headerContent" class="mx-auto text-center">
                <h1 class="mx-auto my-0">kruce blake</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">
                    <a href="" class="text-white-50 typewrite" data-period="2000" data-type='[ "programmer", "application developer", "software engineer" ]'>
                        <span class="wrap"></span>
                    </a>
                </h2>
                <div id="scrollAnimation" class="scroll-animation">
                    <a class="nav-link js-scroll-trigger" href="#about"><span></span></a>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <div id="egg-box" class="egg"><img id="Egg" /></div>
    <!-- Footer -->
    <footer class="bg-black small text-center text-white-50">
        <div class="container">
            kruceblake.com &copy; @DateTime.Now.Year
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/jquery-easing/jquery.easing.js"></script>
        <script src="~/js/grayscale.js"></script>
        <script src="~/js/typewriter.js"></script>
        <script src="~/js/cheet.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha384-vk5WoKIaW/vJyUAd9n/wmopsmNhiy+L2Z+SBxGYnUkunIxVxAv/UtMOhba/xskxh" crossorigin="anonymous" asp-fallback-src="~/lib/jquery/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous" asp-fallback-src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" integrity="sha384-leGYpHE9Tc4N9OwRd98xg6YFpB9shlc/RkilpFi0ljr3QD4tFoFptZvgnnzzwG4Q" crossorigin="anonymous" asp-fallback-src="~/lib/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/js/grayscale.min.js"></script>
        <script src="~/js/typewriter.min.js"></script>
        <script src="~/js/cheet.min.js"></script>
    </environment>
    <script src="~/lib/aos/aos.js"></script>
    <script>AOS.init();</script> @*initialize animate on scroll*@
    @RenderSection("Scripts", required: false)
</body>
</html>